---
import Layout from "../layouts/Layout.astro";
import urls from "../content/urls.json";

const contactInfo = [
  {
    icon: "ph-phone-call",
    title: "Телефон",
    value: urls.phone,
  },
  {
    icon: "ph-envelope-simple",
    title: "Email",
    value: urls.email,
  },
  {
    icon: "ph-map-pin",
    title: "Шоурум",
    value: urls.address,
  },
  {
    icon: "ph-clock",
    title: "Работно време",
    value: "Пон - Пет: 09:00 - 18:00",
  }
];
---

<Layout title="Контакти">
  <div class="flex flex-col bg-bg-primary">
    
    <section class="relative isolate flex items-center justify-center py-32">
      <img 
        src="/rari.jpg"
        alt="Ferrari"
        class="absolute inset-0 w-full h-full object-cover z-0"
      />

      <div class="gradient z-10"></div>

      <div class="section-header">
        <h1 class="title text-white">Свържете се с нас</h1>
      </div>
    </section>

    <section class="container mx-auto p-8 relative my-12">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="flex flex-col gap-8">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
             {contactInfo.map(item => (
                <div class="group bg-bg-secondary p-6 rounded-xl glowy-border transition-all duration-300 hover:-translate-y-1">
                    <div class="w-10 h-10 mb-4 rounded-full bg-primary/10 text-primary flex items-center justify-center text-xl group-hover:bg-primary group-hover:text-black transition-colors">
                        <i class={`ph ${item.icon}`}></i>
                    </div>
                    <h3 class="text-text-secondary text-sm uppercase tracking-wider mb-1">{item.title}</h3>
                    <p class="text-white font-bold text-lg">{item.value}</p>
                </div>
             ))}
          </div>

          <div class="w-full h-80 bg-bg-secondary rounded-xl overflow-hidden glowy-border relative shadow-2xl">
             <iframe 
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2300.7079964927957!2d27.9237233260174!3d43.20891033799625!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40a4540939dfa6d5%3A0x3d401ef3c09a59bf!2sUniversity%20of%20Economics%20%E2%80%93%20Varna!5e0!3m2!1sen!2sbg!4v1764001943525!5m2!1sen!2sbg"
                width="100%" 
                height="100%" 
                style="border:0; filter: grayscale(100%) invert(92%) contrast(83%);" 
                allowfullscreen="" 
                loading="lazy">
             </iframe>
             
             <div class="absolute top-4 right-4 tag">
                <p>Autolux Showroom</p>
             </div>
          </div>

        </div>

        <div class="bg-bg-secondary p-8 md:p-10 rounded-xl glowy-border shadow-2xl h-full">
            <h2 class="text-2xl font-bold text-white mb-2">Изпратете запитване</h2>
            <p class="text-text-secondary mb-8 text-sm">Попълнете формата и наш консултант ще се свърже с Вас до 24 часа.</p>

            <form class="flex flex-col gap-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="flex flex-col gap-2">
                        <label for="name" class="form-label">Име</label>
                        <input 
                            type="text" 
                            id="name" 
                            placeholder="Вашето име"
                            class="form-input"
                        />
                    </div>
                    <div class="flex flex-col gap-2">
                        <label for="phone" class="form-label">Телефон</label>
                        <input 
                            type="tel" 
                            id="phone" 
                            placeholder="+359 00 000 0000"
                            class="form-input transition-colors"
                        />
                    </div>
                </div>

                <div class="flex flex-col gap-2">
                    <label for="email" class="form-label">E-mail</label>
                    <input 
                        type="email" 
                        id="email" 
                        placeholder="name@example.com"
                        class="form-input"
                    />
                </div>

                <div class="flex flex-col gap-2">
                    <label for="message" class="form-label">Съобщение</label>
                    <textarea 
                        id="message" 
                        rows="5"
                        placeholder="Интересувам се от..."
                        class="form-input resize-none"
                    ></textarea>
                </div>
                
                <button onclick="javascript:;" class="btn btn-fill w-full">
                    <i class="ph ph-envelope text-lg"></i>
                    Изпрати
                </button>
            </form>
        </div>

      </div>
    </section>

  </div>
</Layout>
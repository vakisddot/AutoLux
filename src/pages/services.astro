---
import Layout from "../layouts/Layout.astro";

const services = [
  {
    title: "Внос по поръчка",
    desc: "Ние намираме, проверяваме и доставяме желания от Вас автомобил директно от Германия.",
    icon: "ph-airplane-tilt"
  },
  {
    title: "Премиум Лизинг",
    desc: "Гъвкави условия и индивидуални погасителни планове с водещите лизингови компании.",
    icon: "ph-bank"
  },
  {
    title: "Buy-Back & Бартер",
    desc: "Справедлива пазарна оценка на стария Ви автомобил и замяна за по-нов модел.",
    icon: "ph-arrows-left-right"
  },
  {
    title: "Регистрация и Сервиз",
    desc: "Пълно съдействие в КАТ и осигурен специализиран сервиз за поддръжка.",
    icon: "ph-wrench"
  }
];
---

<Layout title="Услуги">
<section class="flex flex-col gap-16">
  <section class="py-32 text-white relative overflow-hidden">
    <img 
      src="/rari.jpg"
      alt="Ferrari"
      class="absolute top-0 left-0 w-full h-full object-cover z-0"
    />

    <div class="absolute top-0 left-0 w-full h-full gradient z-10"></div>

    <div class="container mx-auto px-6 relative z-20 text-center">
      <h2 class="title">Услуги</h2>
    </div>
  </section>
</section>
</Layout>
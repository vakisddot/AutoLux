---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import { slugify } from "../../utils/slugify";
import { formatPrice } from "../../utils/price";
import urls from "../../content/urls.json";

export async function getStaticPaths() {
  const cars = await getCollection("cars");

  return cars.map((car) => {
    const slug = slugify(`${car.data.make}-${car.data.model}`);
    
    return {
      params: { slug },
      props: { car },
    };
  });
}

const { car } = Astro.props;

const formattedPrice = formatPrice(car.data.price);

const specs = [
    { label: "Двигател", value: `${car.data.engine} L`, icon: "ph-engine" },
    { label: "Мощност", value: `${car.data.horsepower} к.с.`, icon: "ph-lightning" },
    { label: "Въртящ момент", value: `${car.data.torque} lb-ft`, icon: "ph-arrow-clockwise" },
    { label: "Ускорение 0-100", value: `${car.data.acceleration} сек.`, icon: "ph-timer" },
    { label: "Година", value: car.data.year, icon: "ph-calendar-blank" },
    { label: "Каросерия", value: "Coupe", icon: "ph-car-profile" },
];
---

<Layout title={`${car.data.make} ${car.data.model}`}>
<section class="py-16 bg-bg-secondary text-white">
  <div class="container mx-auto px-6">
    <a 
    id="back-link" 
    href='/collection/1'
    class="inline-flex items-center gap-2 text-text-secondary hover:text-primary mb-8 transition-colors">
      <i class="ph ph-arrow-left"></i> Назад към колекцията
    </a>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      
      <div class="relative overflow-hidden shadow-2xl">
          <img 
              src={car.data.url} 
              alt={`${car.data.make} ${car.data.model}`}
              class="w-full object-cover"
          />
          <div class="absolute top-4 right-4 bg-primary text-black font-bold px-4 py-2 shadow-lg">
              НАЛИЧЕН
          </div>
      </div>

      <div>
          <h1 class="text-4xl md:text-5xl font-bold mb-2">{car.data.make} <span class="text-primary">{car.data.model}</span></h1>
          <p class="text-text-secondary text-xl mb-6">{car.data.year} Premium Edition</p>

          <div class="text-3xl font-bold text-white mb-8 pb-8 border-b border-white/10">
              {formattedPrice}
              <span class="text-base font-normal text-text-secondary block mt-1">с включено ДДС</span>
          </div>

          <div class="grid grid-cols-2 gap-4 mb-10">
              {specs.map(spec => (
                  <div class="bg-bg-primary p-4 rounded-xl border border-white/5 flex items-center gap-4">
                      <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center text-primary text-xl">
                          <i class={`ph ${spec.icon}`}></i>
                      </div>
                      <div>
                          <div class="text-xs text-text-secondary uppercase tracking-wider">{spec.label}</div>
                          <div class="font-bold text-lg">{spec.value}</div>
                      </div>
                  </div>
              ))}
          </div>

          <div class="bg-bg-primary p-6 rounded-xl border border-primary/30">
              <h3 class="font-bold text-xl mb-2">Имате интерес?</h3>
              <p class="text-text-secondary mb-6 text-sm">Нашите консултанти са на разположение за оглед и тест драйв.</p>
              
              <div class="flex flex-col sm:flex-row gap-4">
                  <a href="/contacts" class="btn btn-fill">
                      <i class="ph ph-phone"></i> {urls.phone}
                  </a>
                  <a href="/contacts" class="btn btn-outline">
                      <i class="ph ph-envelope"></i> Запитване
                  </a>
              </div>
          </div>

      </div>
    </div>
  </div>
</section>

<script>
  const backLink = document.getElementById('back-link');

  const pathname = window.location.pathname;
  
  const cleanPath = pathname.endsWith('/') 
    ? pathname.slice(0, -1) 
    : pathname;
  
  const slug = cleanPath.split('/').pop();

  const urlParams = new URLSearchParams(window.location.search);
  const returnPage = urlParams.get('returnPage');

  if (backLink && returnPage && slug) {
    backLink.setAttribute('href', `/collection/${returnPage}#${slug}`);
  }
</script>
</Layout>
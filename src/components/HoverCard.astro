---
const { icon, title, desc } = Astro.props;
---

<div class="bg-bg-primary/50 p-8 rounded-xl glowy-border transition-all duration-300 hover:-translate-y-2 shadow-2xl backdrop-blur-sm">
    <div class="w-14 h-14 mb-6 flex items-center justify-center rounded-full bg-primary/10 text-primary text-3xl">
        <i class={`ph ${icon}`}></i>
    </div>
    <h3 class="text-xl font-bold text-white mb-3">{title}</h3>
    <p class="text-text-secondary text-sm leading-relaxed">
        {desc}
    </p>
</div>